<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import java.net.URL?>
<?import maze.javafx.scene.MazeCanvas?>
<VBox fx:controller="maze.javafx.Controller" xmlns:fx="http://javafx.com/fxml" alignment="TOP_CENTER" spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <stylesheets>
        <URL value="@maze.css"/>
    </stylesheets>
    <GridPane alignment="CENTER" hgap="10" vgap="10">
        <HBox GridPane.columnIndex="0" GridPane.rowIndex="0" alignment="CENTER_LEFT" spacing="10">
            <Label text="width(5-99):" maxWidth="Infinity" prefHeight="20"/>
            <Spinner fx:id="widthSpinner" prefWidth="80" prefHeight="20"/>
        </HBox>
        <HBox GridPane.columnIndex="1" GridPane.rowIndex="0" alignment="CENTER_LEFT" spacing="10">
            <Label text="height(5-99):" maxWidth="Infinity" prefHeight="20"/>
            <Spinner fx:id="heightSpinner" prefWidth="80" prefHeight="20"/>
        </HBox>
        <HBox GridPane.columnIndex="0" GridPane.rowIndex="1" alignment="CENTER_RIGHT" spacing="10">
            <VBox maxHeight="Infinity">
                <ComboBox fx:id="generationCombo" maxWidth="Infinity"/>
                <ComboBox fx:id="searchCombo" maxWidth="Infinity"/>
            </VBox>
            <VBox maxHeight="Infinity">
                <Button text="新規生成" maxWidth="Infinity" onAction="#onGenerationButtonClicked"/>
                <Button text="新規探索" maxWidth="Infinity" onAction="#onSearchButtonClicked"/>
            </VBox>
        </HBox>
        <HBox GridPane.columnIndex="1" GridPane.rowIndex="1" alignment="CENTER_LEFT" spacing="10">
            <VBox maxHeight="Infinity">
                <HBox>
                    <Label text="seed(long):"/>
                    <TextField fx:id="generationSeed"/>
                </HBox>
                <HBox>
                    <Label text="seed(long):"/>
                    <TextField fx:id="searchSeed"/>
                </HBox>
            </VBox>
            <VBox alignment="CENTER" maxHeight="Infinity">
                <CheckBox fx:id="lfsrCheck" text="単調"/>
                <CheckBox fx:id="stopCheck" text="停止"/>
            </VBox>
        </HBox>
        <HBox GridPane.columnIndex="0" GridPane.rowIndex="2" alignment="CENTER_LEFT" spacing="10">
            <VBox>
                <Label text="generation:" maxWidth="Infinity"/>
                <Label text="search:" maxWidth="Infinity"/>
            </VBox>
            <VBox>
                <Label fx:id="generationUsedTime"/>
                <Label fx:id="searchUsedTime"/>
            </VBox>
        </HBox>
    </GridPane>
    <HBox alignment="CENTER" spacing="10">
        <ToggleButton fx:id="playButton" styleClass="play-button" minWidth="32" minHeight="32" onAction="#onPlayButtonClicked"/>
        <ToggleButton styleClass="speed-button" minWidth="32" minHeight="32" onAction="#onSpeedButtonClicked"/>
        <Slider fx:id="logSlider"/>
        <Label fx:id="logLabel" prefWidth="100"/>
        <CheckBox text="表示切替" onAction="#onDisplayChanged"/>
    </HBox>
    <HBox alignment="CENTER" spacing="10">
        <ScrollPane fx:id="mazePane">
            <MazeCanvas fx:id="mazeCanvas"/>
        </ScrollPane>
    </HBox>
</VBox>
